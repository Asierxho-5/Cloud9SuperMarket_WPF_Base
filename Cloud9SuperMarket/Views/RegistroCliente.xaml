<Window x:Class="Cloud9SuperMarket.Views.RegistroCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Cliente" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="txtNombre"/>
            <TextBlock Text="DNI:"/>
            <TextBox x:Name="txtDNI"/>
            <Button Content="Registrar" Click="Registrar_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>