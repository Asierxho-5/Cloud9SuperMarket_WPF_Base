<Window x:Class="Cloud9SuperMarket.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cloud9 SuperMarket" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Bienvenido a Cloud9 SuperMarket" FontSize="24" Margin="0,0,0,20" />
            <Button Content="Gestionar Productos" Click="GestionarProductos_Click" Margin="0,5"/>
            <Button Content="Registrar Cliente" Click="RegistrarCliente_Click" Margin="0,5"/>
            <Button Content="Realizar Pedido" Click="RealizarPedido_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>