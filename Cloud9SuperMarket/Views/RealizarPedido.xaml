<Window x:Class="Cloud9SuperMarket.Views.RealizarPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realizar Pedido" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="DNI del Cliente:"/>
            <TextBox x:Name="txtDNI"/>
            <TextBlock Text="Nombre del Producto:"/>
            <TextBox x:Name="txtProducto"/>
            <Button Content="Agregar al Pedido" Click="Agregar_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>